.wrapper
    width 10rem
    height 17.733333rem
    box-sizing border-box
    position relative
.luoji__hd--title
    font-size 20px
    font-family sans-serif
    color #000
.luoji__hd
    width 100%
    height 5.6rem
    background url('../../images/bg.jpg') no-repeat
    background-color rgba(0,0,0,0.5);
    background-size: 100%
    position relative
    & img
        width 0.8rem
        height 0.8rem
        border 0
        position absolute
        top 0.373333rem
        left 0.373333rem
    .luoji__hd--title
        color #fff
        position absolute
        top 3rem
        left 0.4666667rem
        font-size 0.4666667rem
    .luoji__hd--tag
        position absolute
        top 3.7666667rem
        left 0.4666667rem
        font-size 0.3333333rem
        color: rgba(255,255,255,0.5)
    .luoji__hd-action
        height 0.533333rem
        width 10rem
        display flex
        position absolute
        bottom 0.5rem
        justify-content center
        align-items center
        li
            width 2.5rem
            height 0.333333rem
            position relative
            padding 0.3rem 0.8rem
            box-sizing border-box
        img
            width 0.366667rem
            height 0.366667rem
            position absolute
            left 0.5rem
        .action-name
            color #fff
            font-size 0.3rem
            float right
.luoji__bd
    height 11rem
    z-index 1
    .item-header
        height 1.2rem
        padding 0 0.5rem
        display flex
        justify-content space-between
        border-bottom 1px solid #ccc
        .item-header__left
            height 1.2rem
            line-height 1.2rem
            flex 1
            img
                width 0.6rem
                height 0.6rem
                vertical-align middle
            span
                font-size 0.3rem
                color #6e6e6e
                margin 0 0.1rem
        .item-header__right
            height 1.2rem
            line-height 1.2rem
            img
                width 0.5rem
                height 0.5rem
                vertical-align middle
            span
                font-size 0.3rem
                line-height 0.4rem
                color #6e6e6e
                margin-left 0.2rem
    .item-list
        width 10rem
        height 10rem
        overflow-y: scroll
        .item-info
            height 1.8rem
            padding 0.3rem 0.3rem
            box-sizing border-box
            display flex
            justify-content center
            align-items center
            border-bottom 1px solid #ccc
            img
                width 0.6rem
                height 0.6rem
                margin 0 0.2rem
            #play-icon
                width 0.8rem
                height 0.8rem
                margin 0 0.2rem
            p
                flex 1
                overflow hidden
                text-overflow ellipsis
                float left
                .item-title
                    font-size 0.35rem
                    line-height 0.5rem
                    color #ccc
                .item-record
                    font-size 0.21rem
                    color #ccc
                    span
                        margin 0 0.2rem
.item__ft--play
    width 100%
    height 1.3rem
    position absolute
    bottom 0
    left 0
    display flex
    justify-content flex-start
    align-items center
    background-color #eef4ef
    z-index 2
    color #7d8281
    img
        width 0.9rem
        height 0.9rem
        background-size 100%
        margin 0 0.2rem
    #icon-detail
        width 0.6rem
        height 0.6rem
        background-size 100%
        margin 0 0.2rem
    .item-info
        flex 1
        .item-action
            .item-title
                font-size 0.4rem
// 弹出页面的样式
.popup-page
    width 10rem
    height 17.733333rem
    display block
    box-sizing border-box
    .header-tag
        width 100%
        height 1.5rem
        padding 0.3rem
        display flex
        justify-content space-between
        align-items center
        .action-back
            width 0.8rem
            height 0.8rem
            img
                width 100%
                height 100%
        .action-set
            width 4rem
            height 1.5rem
            .action-speed
                width 2rem
                height 1.5rem
                display flex
                flex-direction row
                justify-content center
                align-items center
